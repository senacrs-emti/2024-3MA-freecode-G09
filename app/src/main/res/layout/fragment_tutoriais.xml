<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:padding="16dp"
    tools:context=".TutoriaisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Aperte na Imagem para Iniciar o Vídeo"
        android:textColor="@color/black"
        android:fontFamily="@font/amaranth"
        android:textSize="20dp"
        android:textStyle=""/>

    </LinearLayout>

    <TextView
        android:id="@+id/iniciante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amaranth"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textSize="30dp"
        android:textColor="@color/lime"
        android:text="Educativos Básicos" />

        <TextView
            android:id="@+id/auxilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="end"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="15dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:text="(Deslize para mais vídeos) --->" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseRecyclerView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-23dp"
        android:orientation="horizontal" />

        <TextView
            android:id="@+id/medio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/orange"
            android:text="Educativos Intermediários" />

        <TextView
            android:id="@+id/auxilio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="end"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="15dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:text="(Deslize para mais vídeos) --->" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseRecyclerView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-23dp"
        android:orientation="horizontal" />

        <TextView
            android:id="@+id/profissional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/red"
            android:text="Educativos Avançados" />

        <TextView
            android:id="@+id/auxilio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth"
            android:gravity="end"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="15dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:text="(Deslize para mais vídeos) --->" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseRecyclerView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-23dp"
        android:layout_marginBottom="45dp"
        android:orientation="horizontal" />

    </LinearLayout>
</ScrollView>