<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pgbkg"
    android:gravity="center"
    tools:context=".CadastrarActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/borda">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crie uma conta"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="40sp"
                android:fontFamily="@font/amaranth"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/cadastrar_email"
                android:background="@drawable/borda"
                android:layout_marginTop="25dp"
                android:padding="8dp"
                android:hint="Email"
                android:textColorHint="@color/gray"
                android:singleLine="true"
                android:drawableLeft="@drawable/baseline_carta"
                android:drawablePadding="8dp"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/cadastrar_senha"
                android:background="@drawable/borda"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Senha"
                android:textColorHint="@color/gray"
                android:singleLine="true"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_lock"
                android:drawablePadding="8dp"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Cadastrar"
                android:textColor="@color/white"
                android:id="@+id/cadastrar_botao"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/amaranth"
                app:cornerRadius = "20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entrarRedirecionarTexto"
                android:text="JÃ¡ tem uma conta? Entrar"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="0dp"
                android:textSize="20sp"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/blue"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>